<div data-controller="type" class="centered-container h-screen max-w-xl">
  <div class="flex flex-col space-y-6 h-1/2 justify-center">
    <h2 class="text-4xl text-center f">Typing test</h2>
    <hr class="divider py-4"/>
    <div id="game-text" class="text-gray-400 text-2xl"><%= @text %></div>
    <div class="w-full opacity-0">
      <textarea type="text"
                data-action="type#inputChanged"
                data-type-target="input"
                rows="3"
                autofocus
                autocomplete="off"
                class="opacity-0"></textarea>
      <i></i>
    </div>
    <div class="">
      <p>Time: <span id="timer">0s</span></p>
      <p>Mistakes: <span id="mistakes">0</span></p>
    </div>
    <div data-controller="result-popup">
      <%= link_to '', results_path, data: { turbo_frame: 'modal',
                                            result_popup_target: 'link',
                                            action: "display-results@window->result-popup#update" } %>
    </div>
  </div>
</div>